<Window x:Class="SenzuraPOS_DAPP.BillingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Billing - BYTEBUY POS" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Product Selection -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Add Product" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <ComboBox x:Name="ProductComboBox"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Width="280"
                      Margin="0 0 0 10"
                      materialDesign:HintAssist.Hint="Select Product"
                      DisplayMemberPath="DisplayName"/>

            <TextBox x:Name="QuantityTextBox"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Width="280"
                     Margin="0 0 0 10"
                     materialDesign:HintAssist.Hint="Quantity"/>

            <Button Content="Add to Cart"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="280"
                    Height="40"
                    Background="#1F1C2C"
                    Foreground="White"
                    Click="AddToCart_Click"/>
        </StackPanel>

        <!-- Cart Display -->
        <StackPanel Grid.Column="1" Margin="20 0 0 0">
            <TextBlock Text="Current Cart" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <ListView x:Name="CartListView" Height="350">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Product" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Brand" DisplayMemberBinding="{Binding Brand}" Width="100"/>
                        <GridViewColumn Header="Model" DisplayMemberBinding="{Binding ModelNumber}" Width="100"/>
                        <GridViewColumn Header="Qty" DisplayMemberBinding="{Binding Quantity}" Width="50"/>
                        <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" Width="80"/>
                        <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <TextBlock Text="Total: " FontSize="16" FontWeight="Bold" Margin="0 0 10 0"/>
                <TextBlock x:Name="TotalAmountTextBlock" Text="Rs. 0.00" FontSize="16" FontWeight="Bold"/>
            </StackPanel>

            <Button Content="Checkout"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="150" Height="40"
                    HorizontalAlignment="Right"
                    Background="Green"
                    Foreground="White"
                    Margin="0 10 0 0"
                    Click="Checkout_Click"/>
        </StackPanel>
    </Grid>
</Window>
